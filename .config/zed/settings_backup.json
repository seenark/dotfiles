// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "icon_theme": "Colored Zed Icons Theme Dark",
  "edit_predictions": {
    "mode": "eager"
  },
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 22,
  "buffer_font_size": 22,
  "extend_comment_on_newline": false,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },
  "relative_line_numbers": true,
  "vertical_scroll_margin": 8,
  "soft_wrap": "none",
  "autosave": "off",
  "tabs": {
    "file_icons": true,
    "close_position": "left",
    "git_status": true
  },
  "format_on_save": "on",
  "languages": {
    "Markdown": {
      "remove_trailing_whitespace_on_save": false
    },
    "TypeScript": {
      "language_servers": ["!deno", "!typescript-language-server", "vtsls"],
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      },
      "formatter": "language_server"
      // "formatter": {
      //   "external": {
      //     "command": "biome",
      //     "arguments": ["format", "{buffer_path}"]

      //   }
      // }
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": false
      },
      "formatter": "language_server"
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": "language_server"
      // "formatter": {
      //   "external": {
      //     "command": "prettier",
      //     "arguments": ["--stdin-filepath", "{buffer_path}"]
      //   }
      // }
    },
    "Prisma": {
      "formatter": "language_server"
    }
  },
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    },
    "vtsls": {
      "settings": {
        // For TypeScript:
        "typescript": { "tsserver": { "maxTsServerMemory": 16184 } },
        // For JavaScript:
        "javascript": { "tsserver": { "maxTsServerMemory": 16184 } }
      }
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": false,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": false
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "command_aliases": {
    // "W": "w"
  },
  "buffer_font_family": "MonaspiceNe Nerd Font",
  "ui_font_family": "MonaspiceRn Nerd Font",
  "terminal": {
    "shell": {
      "program": "/opt/homebrew/bin/fish"
    },
    "font_family": "MonaspiceKr Nerd Font",
    "font_size": 18
  },
  "project_panel": {
    "git_status": true,
    "indent_size": 30,
    "auto_fold_dirs": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  }
}
