// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
    {
        "bindings": {
            "cmd-e": "workspace::ToggleLeftDock"
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            // "shift shift": "file_finder::Toggle"
            "cmd-escape": null
        }
    },
    {
        "context": "Editor",
        "bindings": {
            // "j k": ["workspace::SendKeystrokes", "escape"]
            // "c-x": "workspace::CloseWindow"
        }
    },
    {
        "context": "vim_mode == insert",
        "bindings": {
            // "j k": "vim::NormalBefore" // remap jk in insert mode to escape.
        }
    },
    {
        "context": "EmptyPane || SharedScreen",
        "bindings": {
            // put key-bindings here (in addition to above) if you want them to
            // work when no editor exists
            "space f": "file_finder::Toggle"
        }
    },
    {
        "context": "VimControl && !menu",
        "bindings": {
            // put key-bindings here if you want them to work in normal & visual mode
            "g l": "vim::EndOfLine",
            "g h": "vim::StartOfLine",
            "g e": "vim::EndOfDocument",
            "L": "pane::ActivateNextItem",
            "H": "pane::ActivatePreviousItem",
            "down": ["workspace::SendKeystrokes", "4 j"],
            "up": ["workspace::SendKeystrokes", "4 k"],
            "space e": "pane::RevealInProjectPanel",
            // "cmd-s": "workspace::Sae",
            "= =": "editor::Format",
            "u": "editor::Undo",
            "U": "editor::Redo",
            // "K": "editor::Hover",
            "space k": "editor::Hover",
            "space y": ["workspace::SendKeystrokes", "cmd-c"],
            "space o": "outline::Toggle",
            "ctrl-x": "pane::CloseActiveItem",
            "[ e": "editor::GoToPreviousDiagnostic",
            "] e": "editor::GoToDiagnostic"
        }
    },
    {
        "context": "Terminal",
        "bindings": {
            "cmd-]": "pane::ActivateNextItem",
            "cmd-[": "pane::ActivatePreviousItem",
            "cmd-i": "terminal::ToggleViMode"
        }
    },
    {
        "context": "ProjectPanel && not_editing",
        "bindings": {
            "a": "project_panel::NewFile",
            "r": "project_panel::Rename",
            "y": "project_panel::Copy",
            "d": "project_panel::Delete",
            "x": "project_panel::Cut",
            "p": "project_panel::Paste",
            "alt-c": "workspace::CopyPath",
            "alt-x": "project_panel::RevealInFileManager",
            // "space e": "workspace::T: "workspace::ToggleLeftDock"ggleLeftDock",
            "space y": "workspace::CopyRelativePath",
            // "ø": "project_panel::Open",
            "enter": ["workspace::SendKeystrokes", "enter ∫"],
            "space e": ["workspace::SendKeystrokes", "enter ∫"]
        }
    },
    {
        "context": "Dock",
        "bindings": {
            "space ph": "workspace::ActivatePaneLeft",
            // "space e": ["workspace::ToggleLeftDock", "Left"],
            "ctrl-w l": "workspace::ActivatePaneRight",
            "ctrl-w k": "workspace::ActivatePaneUp",
            "ctrl-w j": "workspace::ActivatePaneDown"
        }
    },
    {
        "context": "Editor && vim_mode == insert && !menu",
        "bindings": {
            // "ß": "workspace::Save",
            // "®": ["vim::SwitchMode", "Normal"],
            // "cmd-s": ["workspace::SedKeystrokes", "® ß"],
            "shift-space": "editor::ShowCompletions"
        }
    },
    {
        "context": "Editor && vim_mode == normal && !menu",
        "bindings": {
            ".": null, // i have to disable this because when type cmd+esc the action of "." key will done something so I disable "." key to solve this
            "cmd+esc": null, // i have to disable this because when type cmd+esc the action of "." key will done something so I disable "." key to solve this
            "space u h": "editor::ToggleInlayHints"
        }
    },
    {
        "context": "(VimControl && !menu)",
        "bindings": {
            "space .": "editor::ToggleCodeActions"
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            "∫": "workspace::ToggleLeftDock"
        }
    },
    {
        "context": "Terminal",
        "bindings": {
            "cmd-t": "workspace::NewTerminal"
        }
    },
    {
        "context": "Workspace",
        "bindings": {
            "cmd-shift-s": "workspace::SaveWithoutFormat"
        }
    }
]
